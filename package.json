{
  "name": "littlesis-reader",
  "description": "Finds LittleSis entities mentioned on web pages",
  "version": "0.0.1",
  "homepage": "http://chrome.google.com/webstore",
  "author": "matthew skomarovsky",
  "repository": {
    "type": "git",
    "url": "ENTER GIT REPO URL"
  },
  "scripts": {
    "start": "xt-build -e dev -w",
    "start:firefox": "xt-build -e dev -p firefox -w",
    "build": "xt-build -e prod",
    "build:firefox": "xt-build -e prod -p firefox",
    "clean": "xt-clean",
    "docs": "xt-docs",
    "test": "jest",
    "coverage": "nyc --reporter=lcov npm run test",
    "sync": "xt-sync"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintIgnore": [
    "test/**/*"
  ],
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.490.0",
    "@google-cloud/language": "^6.1.1",
    "@mozilla/readability": "^0.5.0",
    "js-tiktoken": "^1.0.8",
    "jsdom": "^24.0.0",
    "openai": "^4.24.1",
    "wikibase-sdk": "^9.2.4"
  },
  "devDependencies": {
    "extension-cli": "latest",
    "jest": "^29.7.0"
  },
  "xtdocs": {
    "source": {
      "include": [
        "README.md",
        "src"
      ]
    }
  },
  "xtbuild": {
    "js_bundles": [
      {
        "name": "content",
        "src": "./src/content.js"
      },
      {
        "name": "background",
        "src": "./src/background.js"
      }
    ]
  },
  "type": "module"
}
